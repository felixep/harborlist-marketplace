# HarborList Local Development Environment Variables
# Copy this file to .env.local and customize as needed

# Frontend Configuration
VITE_API_URL=http://local-api.harborlist.com:3001/api
VITE_ENVIRONMENT=local

# Backend Configuration
NODE_ENV=development

# Database Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_REGION=us-east-1
USERS_TABLE=boat-users
LISTINGS_TABLE=harborlist-listings
SESSIONS_TABLE=boat-sessions
ANALYTICS_TABLE=boat-analytics
AUDIT_LOGS_TABLE=boat-audit-logs
PAYMENT_METHODS_TABLE=harborlist-payment-methods
BILLING_ACCOUNTS_TABLE=harborlist-billing-accounts
TRANSACTIONS_TABLE=harborlist-transactions

# AWS Services (Local)
AWS_ACCESS_KEY_ID=test
AWS_SECRET_ACCESS_KEY=test
AWS_REGION=us-east-1
S3_ENDPOINT=http://localhost:4566
SES_ENDPOINT=http://localhost:4566
S3_BUCKET=harborlist-uploads-local

# Authentication - Environment-specific JWT configuration
# For local development: uses hardcoded secret (fast, no AWS costs)
# For AWS environments: retrieved from AWS Secrets Manager (secure)
JWT_SECRET=local-dev-secret-harborlist-2025
JWT_SECRET_ARN=
ENVIRONMENT=local
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGINS=http://local.harborlist.com:3000,http://localhost:3000

# API Configuration
API_BASE_URL=http://local-api.harborlist.com:3001
FRONTEND_URL=http://local.harborlist.com:3000

# Email Configuration (Local SES)
FROM_EMAIL=noreply@harborlist.local
ADMIN_EMAIL=admin@harborlist.local

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,webp

# Logging
LOG_LEVEL=debug

# Redis (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Payment Processing Configuration
PAYMENT_PROCESSOR=stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here
STRIPE_RETURN_URL=http://local.harborlist.com:3000/payment/return
STRIPE_CANCEL_URL=http://local.harborlist.com:3000/payment/cancel

# PayPal Configuration (Alternative to Stripe)
PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_WEBHOOK_ID=your_paypal_webhook_id_here
PAYPAL_ENVIRONMENT=sandbox
PAYPAL_RETURN_URL=http://local.harborlist.com:3000/payment/return
PAYPAL_CANCEL_URL=http://local.harborlist.com:3000/payment/cancel