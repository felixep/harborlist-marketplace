{
  "name": "harborlist-infrastructure",
  "version": "1.0.0",
  "scripts": {
    "build": "tsc",
    "synth": "cdk synth",
    "synth:dev": "cdk synth -c environment=dev",
    "synth:staging": "cdk synth -c environment=staging",
    "synth:prod": "cdk synth -c environment=prod",
    "synth:auth": "cdk synth -c authOnly=true",
    "synth:auth:dev": "cdk synth -c environment=dev -c authOnly=true",
    "synth:dev:domains": "cdk synth -c environment=dev -c useCustomDomains=true",
    "synth:staging:domains": "cdk synth -c environment=staging -c useCustomDomains=true",
    "synth:prod:domains": "cdk synth -c environment=prod -c useCustomDomains=true",
    "deploy": "cdk deploy --all",
    "deploy:dev": "cdk deploy --all -c environment=dev",
    "deploy:staging": "cdk deploy --all -c environment=staging", 
    "deploy:prod": "cdk deploy --all -c environment=prod",

    "deploy:dev:no-domains": "cdk deploy --all -c environment=dev -c useCustomDomains=false",
    "deploy:staging:no-domains": "cdk deploy --all -c environment=staging -c useCustomDomains=false",
    "deploy:prod:no-domains": "cdk deploy --all -c environment=prod -c useCustomDomains=false",
    "deploy:auth": "cdk deploy CustomerAuthStack-* StaffAuthStack-*",
    "deploy:auth:dev": "cdk deploy CustomerAuthStack-dev StaffAuthStack-dev -c environment=dev",
    "deploy:auth:staging": "cdk deploy CustomerAuthStack-staging StaffAuthStack-staging -c environment=staging",
    "deploy:auth:prod": "cdk deploy CustomerAuthStack-prod StaffAuthStack-prod -c environment=prod",

    "diff": "cdk diff --all",
    "diff:dev": "cdk diff --all -c environment=dev",
    "diff:staging": "cdk diff --all -c environment=staging",
    "diff:prod": "cdk diff --all -c environment=prod",

    "diff:auth": "cdk diff CustomerAuthStack-* StaffAuthStack-*",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "npm run build && npm run test && npm run synth:dev",
    "validate:all": "npm run validate && npm run synth:staging && npm run synth:prod"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.100.0",
    "constructs": "^10.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "aws-cdk": "^2.100.0",
    "typescript": "^5.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.0.0"
  }
}
