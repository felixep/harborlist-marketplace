# Development Dockerfile for Backend
FROM node:18-alpine

# Install system dependencies
RUN apk add --no-cache zip

# Set the working directory to the root workspace
WORKDIR /workspace

# Copy workspace configuration
COPY package*.json ./
COPY packages/shared-types/package*.json packages/shared-types/
COPY packages/shared-types/src packages/shared-types/src/
COPY packages/shared-types/tsconfig.json packages/shared-types/

# Copy backend package files
COPY backend/package*.json backend/

# Install workspace dependencies from root
RUN npm ci

# Build shared types
WORKDIR /workspace/packages/shared-types
RUN npm run build

# Install development dependencies globally
RUN npm install -g nodemon ts-node

# Switch to backend directory
WORKDIR /workspace/backend

# Copy backend source code
COPY backend/ .

# Build TypeScript (for development we still need compiled JS)
RUN npm run build

# Expose port
EXPOSE 3001

# Start development server with hot reload
CMD ["npm", "run", "dev:local"]