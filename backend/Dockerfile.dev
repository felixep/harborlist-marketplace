# Development Dockerfile for Backend Services
FROM node:18-alpine as base

# Install system dependencies
RUN apk add --no-cache zip

# Set the working directory to the root workspace
WORKDIR /workspace

# Copy workspace configuration
COPY package*.json ./
COPY packages/shared-types/package*.json packages/shared-types/
COPY packages/shared-types/src packages/shared-types/src/
COPY packages/shared-types/tsconfig.json packages/shared-types/

# Copy backend package files
COPY backend/package*.json backend/

# Install workspace dependencies from root
RUN npm ci

# Build shared types
WORKDIR /workspace/packages/shared-types
RUN npm run build

# Install development dependencies globally
RUN npm install -g nodemon ts-node

# Switch to backend directory
WORKDIR /workspace/backend

# Copy backend source code
COPY backend/ .

# Skip TypeScript build for development - use ts-node directly
# RUN npm run build

# Main backend service (default)
FROM base as backend
EXPOSE 3001
CMD ["npm", "run", "dev:local"]

# Billing service
FROM base as billing-service
EXPOSE 3002
ENV SERVICE_PORT=3002
ENV SERVICE_NAME=billing-service
CMD ["npm", "run", "dev:billing"]

# Finance service
FROM base as finance-service
EXPOSE 3003
ENV SERVICE_PORT=3003
ENV SERVICE_NAME=finance-service
CMD ["npm", "run", "dev:finance"]

# User service
FROM base as user-service
EXPOSE 3004
ENV SERVICE_PORT=3004
ENV SERVICE_NAME=user-service
CMD ["npm", "run", "dev:user"]